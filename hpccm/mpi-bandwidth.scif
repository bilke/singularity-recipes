
%apprun mpi-bandwidth
    exec /scif/mpi-bandwidth/bin/mpi-bandwidth "$@"

%appinstall mpi-bandwidth
    wget -q -nc --no-check-certificate -P /var/tmp https://computing.llnl.gov/tutorials/mpi/samples/C/mpi_bandwidth.c
    mpicc -o bin/mpi-bandwidth /var/tmp/mpi_bandwidth.c

%apphelp mpi-bandwidth
    This app provides a MPI bandwidth test program

%apptest mpi-bandwidth
    exec  mpirun -np 2 /scif/apps/mpi-bandwidth/bin/mpi-bandwidth "$@"
